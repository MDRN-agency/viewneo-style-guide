<h1>Manage Brands</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th>Description</th>
      <th>Industry</th>
      <th>Logo</th>
      <th>Thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.summary %></td>
        <td><%= brand.description %></td>
        <td><%= brand.industry %></td>
        <td>
          <% if brand.logo_url %>
            <img src="<%= brand.logo_url %>" width="50">
          <% else %>
            N/A
          <% end %>
        </td>
        <td>
          <% if brand.thumbnail_photo_url %>
            <img src="<%= brand.thumbnail_photo_url %>" width="50">
          <% else %>
            N/A
          <% end %>
        </td>
        <td><%= link_to 'Show', admin_brand_path(brand) %></td>
        <td><%= link_to 'Edit', edit_admin_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', admin_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= page_entries_info @brands %>
  <br>
  <%= paginate @brands %>
</div>

<br>

<%= link_to 'New Brand', new_admin_brand_path %>
