<%= simple_form_for brand, url: brand.new_record? ? admin_brands_path : admin_brand_path(brand) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :summary %>
    <%= f.input :description %>
    <%= f.input :industry, as: :select, collection: Industry.all, input_html: { class: 'selectize' } %>
    <%= f.input :logo %>
    <%= f.input :thumbnail_photo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
