<h1>Manage Companies</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th>Description</th>
      <th>Industry</th>
      <th>Logo</th>
      <th>Thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.summary %></td>
        <td><%= company.description %></td>
        <td><%= company.industry %></td>
        <td>
          <% if company.logo_url %>
            <img src="<%= company.logo_url %>" width="50">
          <% else %>
            N/A
          <% end %>
        </td>
        <td>
          <% if company.thumbnail_photo_url %>
            <img src="<%= company.thumbnail_photo_url %>" width="50">
          <% else %>
            N/A
          <% end %>
        </td>
        <td><%= link_to 'Show', admin_company_path(company) %></td>
        <td><%= link_to 'Edit', edit_admin_company_path(company) %></td>
        <td><%= link_to 'Destroy', admin_company_path(company), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= page_entries_info @companies %>
  <br>
  <%= paginate @companies %>
</div>

<br>

<%= link_to 'New Company', new_admin_company_path %>
