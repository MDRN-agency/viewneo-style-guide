<%= simple_nested_form_for company, url: company.new_record? ? admin_companies_path : admin_company_path(company) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-12">
      <%= f.input :name %>
      <%= f.input :summary %>
      <%= f.input :description %>
      <%= f.input :industry, as: :select, collection: Industry.all, input_html: { class: 'selectize' } %>
      <%= f.input :logo %>
      <%= f.input :thumbnail_photo %>
    </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
