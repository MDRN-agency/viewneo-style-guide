<h1>Manage Deals</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Teaser</th>
      <th>Thumbnail photo</th>
      <th>Cover photo</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.title %></td>
        <td><%= deal.teaser %></td>
        <td>
          <% if deal.thumbnail_photo_url %>
            <img src="<%= deal.thumbnail_photo_url %>" width="50">
          <% else %>
            N/A
          <% end %>
        </td>
        <td>
          <% if deal.cover_photo_url %>
            <img src="<%= deal.cover_photo_url %>" width="50">
          <% else %>
            N/A
          <% end %>
        </td>
        <td><%= deal.created_at %></td>
        <td><%= link_to 'Show', admin_deal_path(deal) %></td>
        <td><%= link_to 'Edit', edit_admin_deal_path(deal) %></td>
        <td><%= link_to 'Destroy', admin_deal_path(deal), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= page_entries_info @deals %>
  <br>
  <%= paginate @deals %>
</div>
<br>
<%= link_to 'New Deal', new_admin_deal_path %>
