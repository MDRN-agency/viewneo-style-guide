<h2>Edit Profile</h2>

<%= simple_form_for(@user, url: profile_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, readonly: true, disabled: true %>
    <%= f.input :photo %>
    <%= f.input :first_name, required: true, autofocus: true %>
    <%= f.input :last_name %>
    <%= f.input :password, autocomplete: "off", required: true, hint: 'Leave blank if you dont want to change' %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: 'btn btn-primary' %>
    <a href="<%= profile_path %>" class="btn btn-default">Cancel</a>
  </div>
<% end %>

